// https://www.typescriptlang.org/docs/handbook/tsconfig-json.html

{
  "compilerOptions": {
    "strictNullChecks": true,
    "rootDir": ".",
    "outDir": "compiled",
    "sourceRoot": ".",
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es2015"
    ],
    "noImplicitAny": true,
    "removeComments": true
  },
  "include": ["./**/*.ts"]
}